		#config site ssl apache2
		if [[ $NDD != "" ]]
		then
			echo -e "${G}[+] Set $NDD in vhost 1-ssl.conf"
			sed -i "s;NDD;$NDD;" /etc/apache2/sites-available/1-ssl.conf
		fi
            #IPP
		if [[ $IPP != "" ]]
		then
			echo -e "${G}[+] SET IPP"
			echo $IPP > /opt/etmi/ECS/.shistukendayo
		fi